@model IEnumerable<Share.entities.EParada>
@{
    Layout = "~/Views/Shared/_LayoutBGC.cshtml";
}
@{
    ViewBag.Title = "proxVehiculos";
}


<h2 style="color:azure">Seleccione una parada</h2>

<div class="row">
    <div class="col-6 mx-auto ">

        <table class="table table-bordered">
            <thead>
                <tr class="bg-primary">
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="background-color: rgba(41, 104, 157,0.5);color: azure;">

                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>

                        <td class="text-right">
                            @Html.ActionLink("Seleccionar", "verVehiculoP", new { id = item.IdParada }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div>
    @Html.ActionLink("ir al inicio", "index")
</div>
@section scripts
{
    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">



        $(function () {

            var chat = $.connection.notificacion;
            chat.client.notificarUsr = function (message) {
                alert(message);
            };
            $.connection.hub.start();

        });
    </script>

}
