@model Share.DTOs.DTOCompPasaje

@{
    ViewBag.Title = "documento";
}

@{
    var data = ViewBag.Message;
}
<br>
<h1>Costo del pasaje: @data $ </h1>
<br>


@using (Html.BeginForm())
{
