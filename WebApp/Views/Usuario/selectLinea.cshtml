@model IEnumerable<Share.entities.EParada>
@{
    Layout = "~/Views/Shared/_LayoutBGC.cshtml";
}
@{
    ViewBag.Title = "Origen";
}

<h2 style="color:azure">Seleccione parada de origen</h2>


<table class="table table-bordered">
    <thead>
        <tr class="bg-primary">

            <th scope="col">
                Paradas:
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr  style="background-color: rgba(41, 104, 157,0.5);color: azure;">

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td class="text-right">
                    @Html.ActionLink("Seleccionar", "selectPOrigen", new { id = item.IdParada }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Ir al inicio", "Index")
</div>