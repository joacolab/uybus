@{
    Layout = "~/Views/Shared/_LayoutBGC.cshtml";
}
@{
    ViewBag.Title = "Usuario";
}



<div class="jumbotron" style="background-color: rgba(150,255,210,0.5);  text-align: center; margin-top: 50px">

    <h1 style="
        font-family: Segoe UI;
        color: black;
        font-size: 60px;
        font-weight: 700;">
        Bienvenido @ViewBag.nombreUsu
    </h1>
</div>

<br>


<!--RESUMEN tramo y salida no andan ya que le paso un diccionario-->

<div class="container">
    <div class="row">
        <div class="text-center col-12 col-md-6">
            <h2 style="color:azure">Comprar pasaje</h2>
            <a href='@Url.Action("traerLineas", "Usuario")'>
                <img src="~/Content/Images/CP.jpg" alt="Image" width="300px" height="200px" style="border: 2px solid black ;border-radius: 10px;" class="img-fluid">
            </a>
        </div>
        <div class="text-center col-12 col-md-6">
            <h2 style="color:azure">Proximos vehiculos</h2>
            <a href='@Url.Action("proxVehiculos", "Usuario")'>
                <img src="~/Content/Images/PV.jpg" alt="Image" width="300px" height="200px" style="border: 2px solid black ;border-radius: 10px;" class="img-fluid">
            </a>
        </div>
    </div>
</div>

<br>


@section scripts
{
    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">



        $(function () {

            var chat = $.connection.notificacion;
            chat.client.foo = function (name, message) {
                alert(name + '' + message);
            };
            $.connection.hub.start();

        });
    </script>

}





