@model IEnumerable<Share.entities.ELinea>

@{
    ViewBag.Title = "traerLinea";
}

<h2>Lineas</h2>

<p>
    @Html.ActionLink("Nueva Linea", "crearLinea")
</p>
<table class="table">
    <tr>
        <th>
            Identificador de Linea
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdLinea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "editarLinea", new { id = item.IdLinea })
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("ir al inicio", "index")
</div>
